{% block all%}	
{% block menu%}	
<style type='text/css'>
	ul.nav li.dropdown:hover ul.dropdown-menu {
		display: block;
	}
</style>
<div class="navbar-collapse collapse">
	<ul class="nav navbar-nav pull-right">

		{%for item in collection%} 
		{%if item.pages is  empty%}
		<li  class="" >

		<a href="{{item.anchor}}" >
			<i class="fa fa-home"></i>
			{{item.title}}<br />

			<small>{{item.subtitle}}</small>

		</a>
		</li>
		{%else%}

		<li class="dropdown">
		<a href="{{item.anchor}}" >{{item.title}}<br/>{{item.subtitle}} <b class="caret"></b></a>
		<ul class="dropdown-menu">
			{%for subpage in item.pages %}
			<li><a href="/{{subpage.anchor}}">{{subpage.title}}</a></li>
			<!--<li class="divider"></li>-->
			{%endfor%}
		</ul>
		</li>
		{%endif%}
		{%endfor%} 
	</ul>
</div>
{%endblock%}

{%endblock%}

<!--/.navbar-collapse -->
