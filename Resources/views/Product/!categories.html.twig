<style type="text/css">
	.col-box span {
	}

</style>
<div class="row">
	{% set par = 0 %}
	{% for cat in categories %}
	<div class="col-md-6 col-box horizontal">
		<h3>RIA {{ cat.name |capitalize}}</h3>
		<div class="row">
			<div class="col-md-5">
				<a href="{{path('product_cat',{'slug':cat.slug})}}" >
					{% if cat.media|length >0 %}
					<img src="{% path cat.media, 'medium' %}" alt="{{ cat.media.name }}" class="img-responsive "  />			
					{% else %}
					<img src="/img/blank.png" alt="" class="img-responsive " />
					{% endif %}
				</a>
			</div>
			<div class="col-md-7 col-sm-6">
				<span>
					<div class="line10"></div>
					
					{#		<p>{{cat.description}}</p>	#}
					{{ cat.description|striptags|truncate(200, true, "...")|raw }}
					<div class="bottom">
						<div class="button">
							<a class="btn btn-primary btn-submit" href="{{ path('product_cat', { 'slug': cat.slug }) }}">CZYTAJ DALEJ</a>
						</div>
					</div>	
				</span>
			</div>
		</div>
	</div>
	{% if cat.parent.id is defined %}
	{% set par = cat.parent.name|lower %}
	{% endif %}
	{% endfor %}
</div>
