{% extends "SoftlogoCMSBundle:Page:page.html.twig" %}

{% block style %}	
{{parent()}}
<style type="text/css">
</style>
{% endblock %}	

{% block sections%}	
<div class="row">
	<div class="col-md-4">
		<a href="{{path('cms_galleries',{'site':app.request.get('site'),'id':rootCategory.id})}}">Powr√≥t</a>
	</div>
</div>
<div class="row">
	{% if categories.count>0%}
	<div class="col-md-12">
		<ul id="filters">
			<li><a href="gallery.html#" data-filter="*" class="selected">Wszystko</a></li>
			{% for category in categories %}
			<li><a href="gallery.html#" data-filter=".{{category.id}}">{{category.name}}</a></li>
			{% endfor %}
		</ul>

	</div>
	{% endif %}
	<div class="col-md-12">
		<div id="gallery" class="gallery">

			{% for media in medias %}
			<div class="item {{media.category.id}}">
				<a class="preview" href="{% path media, 'large'%}" data-gal="prettyPhoto" title="Your Title">
					<img class="img-responsive" src="{% path media, 'medium'%}" alt="" />
				</a>
				<h4>{{media.name}}</h4>
			</div>

			{% endfor %}

		</div>
	</div>
</div>


{%endblock%}
