{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Section list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Anchor</th>
                <th>Type</th>
                <th>Parent</th>
                <th>Itemorder</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Isvisible</th>
                <th>Ispage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('section_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.anchor }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.parent }}</td>
                <td>{{ entity.itemorder }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isVisible }}</td>
                <td>{{ entity.isPage }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('section_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('section_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('section_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
